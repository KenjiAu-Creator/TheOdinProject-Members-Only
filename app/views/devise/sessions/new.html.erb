<div class="section">
  <div class="container">
    <h2 class="title">Account Log In</h2>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :email,
                  wrapper: false,
                  required: true %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :password,
                  wrapper: false,
                  required: true %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <div class="control">
        <%= f.input :remember_me,
                    :as => :boolean %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <div class="control">
      <%= f.submit "Log in" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
