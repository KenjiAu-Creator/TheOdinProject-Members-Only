<div class="section">
  <div class="container">
    <h2 class="title">Sign up</h2>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="control">
        <%= f.input :username, 
                    autofocus: true,
                    required: true,
                    wrapper: false %>
      </div>
    </div>

  <div class="field">
    <div class="control">
      <%= f.input :email, 
                  autofocus: true, 
                  wrapper: false,
                  required: true %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :password, 
                  wrapper: false,
                  required: true %>
                  <br>
                  <em><%= (@minimum_password_length) %> characters minimum</em>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :password_confirmation, 
                  wrapper: false,
                  required: true %>
    </div> 
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Sign up" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
